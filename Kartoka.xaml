<UserControl x:Class="KalendfrNow.Kartoka"
             Background="LightSkyBlue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KalendfrNow"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Image x:Name="Image" HorizontalAlignment="Left" Height="46" Margin="0,4,0,0" Grid.Row="1" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.6,0.531"/>
        <TextBlock x:Name="TextBlock" HorizontalAlignment="Center" Height="15" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Width="60" TextAlignment="Center" FontSize="14"/>

    </Grid>
</UserControl>
